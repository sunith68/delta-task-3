<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Add Article</title>
	<link rel="stylesheet" type="text/css" href="style1.css">
</head>
<body>
	<div class="top">Blog</div>
	<div class='panel'>
		<a href="/">Home</a>
		<a href="/accepted">Accepted Events</a>
		<a href="/myevents">My Events</a>
		<a href="/create">Create Invitation</a>
		<form action="/logout" method="POST">
  			<button type="submit">Log Out</button>
		</form>
	</div>
	<div class="changes">
		<h1>Create Invitation</h1>
		<form class='create' action="/create" method="POST">
			<label>Header</label>
			<input required type="text" name="header">
			<label>Date</label>						
			<input required type="text" name="date">
			<label>Location</label>
			<input type="text" name="location">
			<select id="show" name="type">
			    <option value="public" onclick="dontShow()">Public</option>
			    <option value="private" onclick="showTo()">Private</option>
			</select>
			<div class='private'><label>Send to</label>
			<input id='to' type="text" placeholder="Enter usernames seperated by spaces" name="invitees" ></div>
			<label>Body</label>
  			<textarea  name="content"></textarea>
  			<label>Footer</label>
  			<textarea name="footer"></textarea><br>
  			<a href="/">Cancel</a>
  			<button type="submit">Create</button>
		</form>
	</div>
	<script type="text/javascript">
		var private=document.querySelector('.private');
		var show=document.getElementById('show');
		var to=document.getElementById('to');
		private.style.display='none'
		show.addEventListener('change',()=>{
			if (show.value=='public') {
				private.style.display='none'
			}else{
				private.style.display='block'
			}	
		})
		private.addEventListener('keyup',()=>{
			if(to.value.includes('  ')){
				alert('Dont enter more than one space continuously in the TO field')
			}
		})
	</script>
</body>
</html>
